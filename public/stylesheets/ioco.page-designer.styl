html, body

  height: 100%

  .ioco-page-content
    width: 100%
    height: 100%
    position: relative

    .tool-helper
      width: 30%
      font-size: 40px
      color: #333
      text-align: center
      padding: 70px 0
      text-shadow: 0 0 3px rgba(0,0,0,0.5)
      background-color: rgba(255,255,255,0.9)
      border: 2px dashed #ddd
      z-index: 999


    &.highlight
      background-color: #ffe

    .ioco-web-bit
      position: relative
      z-index: 1
      //-moz-user-select: none
      //-khtml-user-select: none
      //-webkit-user-select: none
      //user-select: none

      &.root
        min-width: 100px
        min-height: 200px
        height: 100%

      //&.edit-mode
      //  -moz-user-select: auto
      //  -khtml-user-select: auto
      //  -webkit-user-select: auto
      //  user-select: auto

      &.hovered, &.outlined
        outline: 2px dashed #ddd

      &.changed
        background: rgba( 200, 50, 50, 0.5 )

      &.highlight-left
        border-left: 20px solid #8a0

      &.highlight
        background-color: rgba( 200, 150, 70, 0.3 )

      &.clearfix
        zoom: 1
        &:before, &:after
          content: ""
          display: p
        &:after
          clear: both

      .box-controls
        position: absolute
        top: 5px
        left: 20px
        display: none
        height: 24px
        background: #eee
        border: 1px solid #ccc
        opacity: 0.3
        &:hover
          opacity: 1
        a.box-control
          margin: 0
          padding: 1px 3px
          float: left
          color: #333
          cursor: pointer
          font-size: 16px
          &.detach-box
            padding: 0 8px
          .icn
            margin: 3px 1px
            opacity: 0.5
            &:hover
              opacity: 1
          &.move-btn
            opacity: 0.1
            &.move-enabled
              opacity: 1
              cursor: move

      &.active
        outline: 3px dashed rgba( 255, 100, 100, 0.5 )
        z-index: 10
        > .box-controls
          display: block
          z-index: 11

      h1.no-text
        font-size: 32px
        color: rgba(0,0,0,0.5)
        font-weight: 100
        position: absolute
        top: 0
        left: 0
        right: 0
        bottom: 0
        margin: auto
        text-align: center
        line-height: 150px

      &.fill-all
        width: 100%
        height: 100%
        position: relative

      &.float-left
        float: left
        z-index: 2

      &.float-right
        float: right
        z-index: 2

      &.float-left-all-over
        float: left
        height: 100%

      &.float-right-all-over
        float: right
        height: 100%

      &.position-absolute
        position: absolute
        top: 0
        left: 0

      &.span1, &.span2, &.span3
        margin: 1%
        min-height: 150px
      &.span1
        width: 31%
      &.span2
        width: 64%
      &.span3
        width: 98%