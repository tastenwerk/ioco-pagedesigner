WEB_TRANSITION()
  -webkit-transition-property: all
  -moz-transition-property: all
  -o-transition-property: all
  -ms-transition-property: all
  transition-property: all
  -webkit-transition-duration: 0.3s
  -moz-transition-duration: 0.3s
  -o-transition-duration: 0.3s
  -ms-transition-duration: 0.3s
  transition-duration: 0.3s

.ioco-page-designer
  height: 100%

.ioco-page-designer-drop-desc
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  width: 500px
  height: 70px
  margin: auto
  color: #333
  text-shadow: 0 0 3px rgba(0,0,0,0.5)
  background-color: rgba(255,255,255,0.7)
  padding: 10px 0
  font-size: 30px
  text-align: center
  z-index: 998

.ioco-page-designer-toolbar
  position: absolute
  top: 0
  right: 0
  width: 51px
  bottom: 0
  background: #eee
  border: 1px solid #aaa
  border-radius: 1px
  z-index: 11
  box-shadow: -2px -2px 3px rgba(0,0,0,0.5)
  WEB_TRANSITION()

  .ioco-logo
    width: 38px
    height: 14px
    position: absolute
    top: 5px
    left: 7px
    background-image: url('../ioco.png')
    &.draggable-handle
      cursor: move

  .overflow-area
    overflow-y: auto
    margin-right: -5px

  &.expanded
    width: 161px
    WEB_TRANSITION()

  .switch-btn
    margin: 0 0 10px
    float: left

  .page-designer-part
    display: none
    padding: 5px
    margin-top: 15px
    ul
      list-style: none
      background: #fafafa
      li
        font-size: 10px
        padding: 3px 5px
        border-bottom: 1px solid #ddd
        cursor: move
        &:last-child
          border-bottom: none
        &:hover
          background-color: #8a0
          color: white
    h1
      font-size: 16px
      font-weight: 100
      margin: 5px 0 10px
    .desc
      font-size: 10px
      color: #777
      margin-bottom: 10px
    h2
      font-size: 14px
      font-weight: 100
      margin: 5px 0


    &.disabled
      .design-btn
        opacity: 0.1
        cursor: default

  .switch-btns
    position: absolute
    left: -114px
    top: 150px
    width: 200px
    transform: rotate( 270deg )
    -ms-transform: rotate( 270deg )
    -moz-transform: rotate( 270deg )
    -webkit-transform: rotate( 270deg )
    -o-transform: rotate( 270deg )
    a
      border: 1px solid #aaa
      border-bottom: none
      margin: 0 1px
      color: #777
      font-size: 12px
      padding: 2px 10px 3px
      text-decoration: none
      opacity: 0.5
      background-color: #eee
      &.active
        opacity: 1

  .design-btn, .source-btn
    margin: 10px 0
    padding: 10px
    border: 1px solid #ccc
    text-align: center
    background-color: #f0f0f0
    opacity: 0.8
    cursor: pointer

  .design-btn
    cursor: move
    &:hover
      opacity: 1
      background-color: #fff
      border: 1px solid #ccc
      box-shadow: 1px 1px 3px rgba(0,0,0,0.5)
    &.small
      padding: 0
      margin: 1px
      line-height: 5px
      float: left
      cursor: pointer
    &.text
      font-size: 10px
      padding: 5px
      font-weight: 900

  .spacer
    height: 1px
    border: none
    border-top: 1px solid #ccc
    margin: 5px 0
    width: 100%
    &.small
      float: left

.ioco-modal
  .sidebar-content
    .web-bit-props
      h1
        font-size: 20px
        color: #555
        font-weight: 100
      label
        color: #777
        font-size: 12px
      p
        margin-top: 5px
      input[type=text]
        width: 98%
      .ace-editor
        width: 100%
        height: 270px
        position: absolute
        top: 120px
        left: 0
        font-size: 11px

      table.revisions
        width: 100%
        td
          border-bottom: 1px solid #ddd
